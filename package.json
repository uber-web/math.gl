{
  "name": "math.gl",
  "description": "Array-based 3D Math Classes optimized for WebGL applications",
  "license": "MIT",
  "version": "2.3.0-beta.1",
  "keywords": [
    "webgl",
    "javascript",
    "math",
    "matrix",
    "matrix4",
    "vector",
    "vector2",
    "vector3",
    "vector4",
    "quaternion",
    "euler",
    "spherical",
    "coordinates",
    "3d"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uber-web/math.gl.git"
  },
  "main": "dist/es5/index.js",
  "module": "dist/esm/index.js",
  "esnext": "dist/es6/index.js",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": [
    "./src/lib/common.js"
  ],
  "scripts": {
    "clean": "ocular-clean",
    "build": "ocular-build && ocular-test bundle",
    "lint": "ocular-lint",
    "metrics": "ocular-metrics",
    "publish": "ocular-publish",
    "test": "ocular-test"
  },
  "legacyScripts": {
    "cover": "NODE_ENV=test nyc --reporter html --reporter cobertura --reporter=lcov npm run test-cover",
    "test-cover": "NODE_ENV=test tape -r babel-register test/node.js && nyc report",
    "test-browser": "webpack-dev-server --config test/webpack.config.js --env.test --progress --hot --open"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "gl-matrix": "^3.0.0"
  },
  "devDependencies": {
    "ocular-dev-tools": "0.0.4",
    "reify": "^0.18.1"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js"
    ]
  }
}
