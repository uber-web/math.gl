{
  "name": "math.gl",
  "description": "Array-based 3D Math Classes optimized for WebGL applications",
  "license": "MIT",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/uber-web/math.gl.git"
  },
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "bootstrap": "yarn && ocular-bootstrap",
    "clean": "ocular-clean",
    "build": "ocular-build",
    "cover": "ocular-test cover",
    "lint": "ocular-lint",
    "metrics": "ocular-metrics",
    "publish": "ocular-publish",
    "bench": "ocular-test bench",
    "bench-browser": "ocular-test bench-browser",
    "test": "ocular-test",
    "test-browser": "ocular-test browser",
    "test-size-explicit": "npm run build && webpack --config test/webpack.config.js --env.import-vec4-mat4-explicit",
    "test-size": "npm run build && webpack --config test/webpack.config.js --env.import-nothing"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "gl-matrix": "^3.0.0"
  },
  "devDependencies": {
    "@probe.gl/bench": "^3.0.0",
    "@probe.gl/test-utils": "^3.0.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "npx": "^10.2.0",
    "ocular-dev-tools": "0.0.19",
    "pre-commit": "^1.2.2",
    "reify": "^0.18.1",
    "prettier": "^1.11.1",
    "raw-loader": "^0.5.1",
    "reify": "^0.18.1",
    "source-map-loader": "^0.2.3",
    "tap-browser-color": "^0.1.2",
    "tape": "^4.5.1",
    "tape-catch": "^1.0.4",
    "transform-loader": "^0.2.3",
    "uglify-js": "^2.6.1",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^2.6",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-dev-server": "^2.6"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js",
      "src/layers/deprecated"
    ]
  }
}
