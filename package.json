{
  "name": "math.gl",
  "description": "Array-based 3D Math Classes optimized for WebGL applications",
  "license": "MIT",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/uber-web/math.gl.git"
  },
  "workspaces": [
    "modules/*"
  ],
  "scripts": {
    "bootstrap": "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true yarn && ocular-bootstrap",
    "clean": "ocular-clean",
    "build": "ocular-build",
    "cover": "ocular-test cover",
    "lint": "ocular-lint",
    "metrics": "ocular-metrics",
    "publish": "ocular-publish",
    "test": "ocular-test",
    "types": "tsc",
    "test-size-explicit": "npm run build && webpack --config test/webpack.config.js --env.import-vec4-mat4-explicit",
    "test-size": "npm run build && webpack --config test/webpack.config.js --env.import-nothing"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "gl-matrix": "^3.0.0"
  },
  "devDependencies": {
    "@probe.gl/bench": "^3.0.2",
    "@probe.gl/test-utils": "^3.0.2",
    "@turf/destination": "^6.0.1",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "coveralls": "^3.0.0",
    "eslint-plugin-react": "^7.10",
    "ocular-dev-tools": "0.0.29",
    "pre-commit": "^1.2.2",
    "reify": "^0.18.1",
    "typescript": "^3.5.2"
  }
}
