{
  "name": "math.gl",
  "description": "Array-based 3D Math Classes optimized for WebGL applications",
  "license": "MIT",
  "version": "1.1.0-alpha.1",
  "keywords": [
    "webgl",
    "javascript",
    "math",
    "matrix",
    "matrix4",
    "vector",
    "vector2",
    "vector3",
    "vector4",
    "quaternion",
    "euler",
    "spherical",
    "coordinates",
    "3d"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uber-web/math.gl.git"
  },
  "main": "dist/es5/index.js",
  "module": "dist/esm/index.js",
  "esnext": "dist/es6/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "(cd examples/layer-browser && (path-exists node_modules || npm i) && npm run start-local)",
    "clean": "rm -fr dist && mkdir -p dist/es5 dist/esm dist/es6",
    "build-es6": "BABEL_ENV=es6 babel src --out-dir dist/es6 --source-maps",
    "build-esm": "BABEL_ENV=esm babel src --out-dir dist/esm --source-maps",
    "build-es5": "BABEL_ENV=es5 babel src --out-dir dist/es5 --source-maps",
    "build": "npm run clean && npm run build-es6 && npm run build-esm && npm run build-es5",
    "cover": "NODE_ENV=test nyc --reporter html --reporter cobertura --reporter=lcov npm run test-cover",
    "lint": "eslint src test examples && npm run lint-yarn",
    "lint-yarn": "!(grep -q unpm.u yarn.lock) || (echo 'Please rebuild yarn file using public npmrc' && false)",
    "pretty": "prettier --write \"{src,examples,test}/**/*.js\" --loglevel warn",
    "publish-prod": "npm run build && npm run test && npm run test-dist && npm publish",
    "publish-beta": "npm run build && npm run test && npm run test-dist && npm publish --tag beta",
    "test": "npm run lint && npm run build && npm run test-node",
    "test-fast": "npm run test-node | faucet",
    "test-cover": "NODE_ENV=test tape -r babel-register test/node.js && nyc report",
    "test-node": "node test/node.js",
    "test-dist": "node test/node-dist.js",
    "test-browser": "webpack-dev-server --config test/webpack.config.js --env.test --progress --hot --open",
    "test-size-es6": "npm run build-es6 && webpack --config test/webpack.config.js --env.import-nothing --env.es6",
    "test-size-esm": "npm run build-esm && webpack --config test/webpack.config.js --env.import-nothing",
    "bench": "node test/bench/node.js",
    "bench-browser": "webpack-dev-server --config test/webpack.config.js --env.bench --progress --hot --open"
  },
  "dependencies": {
    "babel-plugin-version-inline": "^1.0.0",
    "gl-mat3": "^1.0.0",
    "gl-mat4": "^1.1.4",
    "gl-quat": "^1.0.0",
    "gl-vec2": "^1.0.0",
    "gl-vec3": "^1.0.3",
    "gl-vec4": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.22.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.4.3",
    "babel-preset-minify": "^0.3.0",
    "benchmark": "^2.1.3",
    "coveralls": "^2.13.0",
    "eslint": "^3.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-uber-es2015": "^3.0.0",
    "faucet": "0.0.1",
    "module-alias": "^2.0.0",
    "nyc": "^10.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.11.1",
    "raw-loader": "^0.5.1",
    "reify": "^0.4.4",
    "source-map-loader": "^0.2.3",
    "tap-browser-color": "^0.1.2",
    "tape": "^4.5.1",
    "tape-catch": "^1.0.4",
    "transform-loader": "^0.2.3",
    "uglify-js": "^2.6.1",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^2.6",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-dev-server": "^2.6"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js",
      "src/layers/deprecated"
    ]
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  }
}
